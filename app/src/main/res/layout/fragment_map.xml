<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapFrag"
    android:background="@color/colorbtn">

    <fragment
        android:id="@+id/frg"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tx_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation"
        app:layout_constraintTop_toButtomOf="@id/bt_reservation"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="708dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Taxi Close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toButtomOf="@id/bt_taxiClose"
        tools:layout_editor_absoluteX="63dp" />


    <ImageView
        android:id="@+id/bt_taxiClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_historique"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bt_reservation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_reservation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imag_passager"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="184dp"
        android:layout_marginRight="184dp"
        android:layout_marginBottom="28dp"
        android:src="@android:drawable/ic_menu_myplaces"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_tostartOf="parent" />

    <TextView
        android:id="@+id/tx_passager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="passager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toButtomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="157dp"/>


</android.support.constraint.ConstraintLayout>